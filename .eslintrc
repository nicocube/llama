{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
        "no-trailing-spaces": [1, { "skipBlankLines": false }],
        "no-console": 1
    },
    "env": {
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended"
}
