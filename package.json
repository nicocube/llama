{
  "name": "llama",
  "version": "1.2.1",
  "description": "Wooley, sure-footed, a tool for static site generation.",
  "main": "index.js",
  "type": "module",
  "homepage": "https://github.com/nicocube/llama",
  "author": "Nicolas Lochet <nicolas.lochet@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/nicocube/llama.git"
  },
  "scripts": {
    "pretest": "npm run lint",
    "lint": "eslint *.js test",
    "lint:watch": "nodemon -x 'npm run lint'",
    "test": "tape test/**/*.spec.js |tap-summary --no-progress",
    "test:watch": "nodemon -x 'npm run test'",
    "coverage": "c8 tape test/**/*.spec.js && c8 report --reporter=html",
    "preversion": "npm test && npm outdated && npm audit"
  },
  "devDependencies": {
    "c8": "^7.10.0",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.9.1",
    "nodemon": "^2.0.15",
    "tap-summary": "git+ssh://git@github.com/nicocube/tap-summary.git",
    "tape": "^5.5.2",
    "tape-async": "^2.3.0"
  }
}
